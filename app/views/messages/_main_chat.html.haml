.main-chat
  .group-header
    .group-header__info-left
      %p.group-header__name test
      %ul.group-header__menbers
        %p.group-header__menbers__title Menber : 
        %li.group-header__menbers__menber masa
    .group-header__info-right
      = link_to "#", class: "group-header__edit" do
        %p.group-header__edit-btn Edit

  .group-messages
    .main-content
      .main-content__header
        %p.main-content__header__name masa
        %p.main-content__header__date 2019/11/20(web) 17:43:01
      %p.main-content__message あはよう
  .form
    %form.new-message
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message" }
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input.input-btn{type: "submit", value: "Send"}